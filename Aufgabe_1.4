#include <iostream>
#include <iomanip>
#include <cmath>

using namespace std;

int main ()
{

//Variablendeklaration
double summe = 0.0;
double summen = 0.0;
double summen2 = 0.0;
int k=1;
int n=10;

//Lösung mit Schleife
for ( k=1; k<=n; k+=1 )
{
 summe = pow(-1,k+1)*(2*k-1)*(2*k+1);
 summen = summen + summe;
}

//Lösung ohne Schleife
if (n%2 == 0)
{
    summen2 = -1 *(n*2+2)*n;
}
else
{
    summen2 = ((n*2+2)*n) -1;
}


cout << "n ist: " << n << endl;
cout << "Ergebnis mit Schleife: " << summen << endl;
cout << "Ergebnis ohne Schleife: " << summen2 << endl;
return 0;
}
